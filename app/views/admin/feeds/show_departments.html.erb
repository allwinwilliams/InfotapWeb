<% if @department %>
  <h1><%= @department.name -%></h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Department</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @department.feeds.each do |feed| %>
        <tr>
          <td><%= feed.title %></td>
          <td><%= feed.description %></td>
          <td><%= feed.department_id %></td>
          <td><%= link_to 'Show', feed %></td>
          <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
          <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
   <table>
    <thead>
      <tr>
        <th>id</th>
        <th>name</th>
        <th>Feeds of Department</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <td><%= department.id %></td>
          <td><%= department.name %></td>
          <td><%= link_to "Feeds of "+department.name,
:action => "show_departments", :id => department.id %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>