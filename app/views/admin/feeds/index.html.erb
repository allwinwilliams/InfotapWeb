<p id="notice"><%= notice %></p>
<% if @feed %>
  <p>
    <strong>Title:</strong>
    <%= @feed.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @feed.description %>
  </p>

  <p>
    <strong>Department:</strong>
    <%=  link_to @feed.department_id, admin_show_feeds_path(@feed.department_id) %>
  </p>
<% else %>

  <% if @department %>
    <h1>Listing Department Feeds</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Department</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @department.feeds.each do |feed| %>
          <tr>
            <td><%= feed.title %></td>
            <td><%= feed.description %></td>
            <td><%=  link_to feed.department_id, admin_show_feeds_path(feed.department_id) %></td>
            <td><%= link_to 'Show', admin_feed_path(feed) %></td>
            <td><%= link_to 'Edit', edit_admin_feed_path(feed) %></td>
            <td><%= link_to 'Destroy', admin_feed_path(feed), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h1>Listing Feeds</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Department</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @feeds.each do |feed| %>
          <tr>
            <td><%= feed.title %></td>
            <td><%= feed.description %></td>
            <td><%=  link_to feed.department_id, admin_show_feeds_path(feed.department_id) %></td>
            <td><%= link_to 'Show', admin_feed_path(feed) %></td>
            <td><%= link_to 'Edit', edit_admin_feed_path(feed) %></td>
            <td><%= link_to 'Destroy', admin_feed_path(feed), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
<br>

