<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @department.name %>
</p>

<%= link_to 'Edit', edit_admin_department_path(@department) %> |
<%= link_to 'Back', admin_departments_path %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @department.feeds.each do |feed| %>
      <tr>
        <td><%= feed.title %></td>
        <td><%= feed.description %></td>
        <td><%= feed.department_id %></td>
        <td><%= link_to 'Show', admin_feed_path(feed) %></td>
        <td><%= link_to 'Edit', edit_admin_feed_path(feed) %></td>
        <td><%= link_to 'Destroy', admin_feed_path(feed), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_admin_department_path %>
