<!DOCTYPE html>
<html>
<head>
  <title>Knowtify</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Knowtify</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav  navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to current_user.email , '#' , :class => 'active navbar-link' %> </li>
              <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> </li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
              <li><%= link_to "Feeds", user_feeds_path, :class => 'navbar-link'  %></li>
              <li><%= link_to "Departments", user_departments_path, :class => 'navbar-link'  %></li>

            <% else %>
              <% if admin_signed_in? %>
                <li><%= link_to current_admin.email , '#' , :class => 'active navbar-link' %> </li>
                <li><%= link_to 'Edit profile', edit_admin_registration_path, :class => 'navbar-link' %> </li>
                <li><%= link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link'  %></li>
                <li><%= link_to "Feeds", admin_feeds_path, :class => 'navbar-link'  %></li>
                <li><%= link_to "Departments", admin_departments_path, :class => 'navbar-link'  %></li>
                <li><%= link_to "Users", admin_users_path, :class => 'navbar-link'  %></li>
              <%else%>
                <li><%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %></li>
                <li><%= link_to "Sign in", new_user_session_path, :class => 'navbar-link'  %></li>
                <li><%= link_to "Admin", new_admin_session_path, :class => 'navbar-link'  %></li>
              <%end%>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
</div>

<%= yield :top_content %>

<div class="container">

    <h1><%= yield :header %></h1>
  <%= yield %>
</div>
<footer class="footer">
   <div class="container">
     <p class="text-muted">DBMS project by Allwin & Aravinth.</p>
   </div>
  </footer>
</body>
</html>
