<p id="notice"><%= notice %></p>
<% if @department %>
  <p>
    <strong>Name:</strong>
    <%= @department.name %>
  </p>

  <%= link_to 'Edit', edit_user_department_path(@department) %> |
  <%= link_to 'Back', user_departments_path %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Department</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @department.feeds.each do |feed| %>
        <tr>
          <td><%= feed.title %></td>
          <td><%= feed.description %></td>
          <td><%= feed.department_id %></td>
          <td><%= link_to 'Show', user_feed_path(feed) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1>Listing Departments</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <td>
            <%= department.name %>
          </td>
          <td>
            <%= link_to 'Show', user_department_path(department.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>


